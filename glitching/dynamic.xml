<mlt>
  <filter id="glitch_rgb">
    <property name="mlt_service">rgbshift</property>
    <property name="shift_x">0</property>
    <property name="shift_y">0</property>
    <property name="shift_x" in="10" out="50">30</property>
    <property name="shift_y" in="10" out="50">25</property>
  </filter>

  <filter id="noise">
    <property name="mlt_service">noise</property>
    <property name="strength">30</property>
    <property name="strength" in="10" out="50">80</property>
  </filter>

  <filter id="blur">
    <property name="mlt_service">boxblur</property>
    <property name="radius_x">5</property>
    <property name="radius_x" in="10" out="50">20</property>
    <property name="radius_y">5</property>
    <property name="radius_y" in="10" out="50">20</property>
  </filter>
</mlt>
